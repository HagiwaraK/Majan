    margin: 0%;
  }

  .chip3 {
    display: inline-block;
    font-size: 24pt;
    width: 29%;
    height: 50%;
    margin: 0%;
    box-sizing: content-box;
    border-left: medium solid #ff00ff;
  }

  .user4 {
    display: inline-block;
    vertical-align: top;
    font-size: 0;
    width: 10%;
    height: 60%;
    margin: 1% 15% 0% 0%;
    padding: 0%;
    border: medium solid #ff00ff;
  }

  .user4_sub {
    display: inline-block;
    font-size: 24pt;
    width: 50%;
    height: 100%;
    margin: 0%;
    padding: 0%;
  }

  .name4 {
    display: inline-block;
    vertical-align: top;
    font-size: 24pt;
    width: 50%;
    height: 100%;
    margin: 0%;
    /box-sizing: content-box;
    border-right: medium solid #ff00ff;
  }

  .point4 {
    display: inline-block;
    vertical-align: top;
    font-size: 24pt;
    width: 100%;
    height: 70%;
    margin: 0%;
  }

  .chip4 {
    display: inline-block;
    vertical-align: top;
    font-size: 24pt;
    width: 100%;
    height: 30%;
    margin: 0%;
