:css
  .main {
    width: 100%;
    height: 93%;
    margin: 0px;
    text-align: center;
    font-size: 0;
  }

  .center {
    display: inline-block;
    width: 40%;
    height: 60%;
    margin: 1%;
    background-color: green;
  }
  
  .user1 {
    font-size: 0;
    width: 40%;
    height: 15%;
    margin: 0% 30% 0% 30%;
    padding: 0%;
    box-sizing: content-box;
    border: medium solid #ff00ff;
  }

  .name1 {
    font-size: 24pt;
    width: 100%;
    height: 50%;
    margin: 0%;
    box-sizing: content-box;
    border-bottom: medium solid #ff00ff;
  }

  .point1 {
    display: inline-block;
    font-size: 24pt;
    width: 69%;
    height: 50%;
    margin: 0%;
  }

  .chip1 {
    display: inline-block;
    font-size: 24pt;
    width: 29%;
    height: 50%;
    margin: 0%;
    box-sizing: content-box;
    border-left: medium solid #ff00ff;
  }

  .user2 {
    display: inline-block;
    vertical-align: top;
    font-size: 0;
    width: 10%;
    height: 60%;
    margin: 1% 0% 0% 15%;
    padding: 0%;
    border: medium solid #ff00ff;
  }

  .user2_sub {
    display: inline-block;
    font-size: 24pt;
    width: 50%;
    height: 100%;
    margin: 0%;
    padding: 0%;
  }

  .name2 {
    display: inline-block;
    vertical-align: top;
    font-size: 24pt;
    width: 50%;
    height: 100%;
    margin: 0%;
    /box-sizing: content-box;
    border-left: medium solid #ff00ff;
  }

  .point2 {
    display: inline-block;
    vertical-align: top;
    font-size: 24pt;
    width: 100%;
    height: 70%;
    margin: 0%;
  }

  .chip2 {
    display: inline-block;
    vertical-align: top;
    font-size: 24pt;
    width: 100%;
    height: 30%;
    margin: 0%;
    box-sizing: content-box;
    border-top: medium solid #ff00ff;
  }
  
  .name2 p, .point2 p, .chip2 p{
    transform: rotate(90deg);
    position: relative;
    top: 40%;
    margin: 0%;
    padding: 0%;
  }

  .rotate {
    width: 100%;
    height: 100%;
    transform: rotate(90deg);
    margin: 0% 0% 0% 50%;
  }
  
  .user3 {
    font-size: 0;
    width: 40%;
    height: 15%;
    margin: 0% 30% 0% 30%;
    box-sizing: content-box;
    border: medium solid #ff00ff;
  }

  .name3 {
    font-size: 24pt;
    width: 100%;
    height: 50%;
    margin: 0%;
    box-sizing: content-box;
    border-bottom: medium solid #ff00ff;
  }

  .point3 {
    display: inline-block;
    font-size: 24pt;
    width: 69%;
